<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         bootstrap="bootstrap.php">
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix='.php'>C:\GitHub\activerecord\Activerecord</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="C:\xampp\tmp\report" lowUpperBound="35"
             highLowerBound="70"/>
    </logging>
    <testsuites>
        <testsuite name="Activerecord Test Suite">
            <directory>C:\GitHub\activerecord\Test</directory>
        </testsuite>
    </testsuites>
</phpunit>